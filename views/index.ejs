<%- include("./includes/head.ejs") %>    
    <title>Library</title>
    <script src="/js/script.js" defer></script>
</head>
<body>
    <%- include("./includes/navigation.ejs") %>
    <div id="backdrop"></div>
    <div class="modal" id="add-book-modal">
        <div class="modal__content">
            <div>
                <label>
                    Book Title
                    <input type="text" name="title" class="input-text-modal">
                </label>
            </div>
            <div>
                <label>
                    Book Author
                    <input type="text" name="author" class="input-text-modal">
                </label>
            </div>
            <div id="checkbox-container">
                <label id="have-read-label">
                    Did you read the book?
                    <input type="checkbox" name="have-read">
                </label>
            </div>
        </div>
        <div class="modal__actions">
            <button id="cancel-modal">Cancel</button>
            <button id="confirm-modal">Confirm</button>
        </div>
    </div>
    <main>
        <div id="library-actions"><button id="new-book-button">New Book</button></div>
        <ul id="books">
        </ul>
        <div></div>
    </main>
</body>
</html>